 * @license http://www.gnu.org/licenses/agpl.txt GNU/AGPL, see LICENSE.txt
 */
#}
<div class="seats">
{% for seat in committee.seats %}
    {% if not seat.vacant %}
    {% if seat.currentMember.website %}<a href="{{ seat.currentMember.website }}">{% endif %}
    <div class="member">
        <h3>{{ seat.currentMember.firstname }} {{ seat.currentMember.lastname }}
            {% if  seat.currentMember.offices %}
            <div>{{ seat.currentMember.offices }}</div>
            {% endif %}
        </h3>
        <dl>{% if committee.info.name == "City Council" %}
            <dt>Elected By:</dt>
            <dd>{{ seat.name }}</dd>
            {% elseif seat.appointedBy %}
            <dt>Appointed By:</dt>
            <dd>{{ seat.appointedBy }}</dd>
            {% endif %}

            {% if seat.currentMember.termEndDate %}
            <dt>Term Expires:</dt>
            <dd>{{ seat.currentMember.termEndDate }}</dd>
            {% else %}
            <dt>Member Since:</dt>
            <dd>{{ seat.currentMember.termStartDate }}</dd>
            {% endif %}
        </dl>
    </div>
    {% if seat.currentMember.website %}</a>{% endif %}
    {% else %}
    <div class="member">
        <h3>Vacant
            {% if seat.currentMember.firstname %}
            ({{ seat.currentMember.firstname }} {{ seat.currentMember.lastname }})
            {% endif %}
        </h3>
        <dl>{% if seat.appointedBy %}
            <dt>Appointed By:</dt>
            <dd>{{ seat.appointedBy }}</dd>
            {% endif %}

            {% if seat.currentTerm %}
            <dt>Term Expires</dt>
            <dd>{{ seat.currentTerm.endDate }}</dd>
            {% endif %}
        </dl>
    </div>
    {% endif %}
{% endfor %}
</div>
<nav>
    {% if committee.info.vacancy %}
    <a href="{{ onboard_url }}/applicants/apply?committee_id={{ committee.info.id }}" class="button">
        Apply to fill a vacancy on this board
    </a>
    {% endif %}
</nav>
