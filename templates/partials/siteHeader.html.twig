{% if alerts %}
	<div id="alerts">{{ alerts }}</div>
{% endif %}

<header>
<nav class="navbar navbar-expand-sm shadow-sm">
    <div class="container-fluid">
        <div class="navbar-brand d-md-none">
            <a class="navbar-brand"  href="https://bloomington.in.gov/" aria-label="Official Homepage of the City of Bloomington, Indiana">
                <img src="https://bloomington.in.gov/static/snowflake-blue.svg" alt="City of Bloomington Logo" height="55" class="d-inline-block align-text-center">
			</a>
        </div>
        <div class="navbar-brand d-none d-md-block">
            <a class="navbar-brand"  href="https://bloomington.in.gov/" aria-label="Official Homepage of the City of Bloomington, Indiana">
                <img src="{{ base_path }}{{ directory }}/css/images/cob-logo-horizontal.svg" alt="City of Bloomington Logo" style="padding-right:5%;" height="55" class="d-inline-block align-text-center">
				Mayor Kerry Thomson
			</a>
        </div>
        <button class="navbar-toggler p-3" type="button" data-bs-toggle="collapse" data-bs-target="#nav-menu" aria-controls="nav-menu" aria-expanded="false" aria-label="Toggle navigation">
            Menu
        </button>
        <div class="collapse navbar-collapse mb-1 justify-content-end" id="nav-menu">
            <div class="d-flex align-items-end flex-sm-row flex-column">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown align-self-end">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Residents</a>
                        {% include '@cob/menus/services.html.twig' %}
                    </li>
                    <li class="nav-item dropdown align-self-end">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Visitors</a>
                        {% include '@cob/menus/info.html.twig'     %}
                    </li>
					<li class="nav-item dropdown align-self-end">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Business</a>
                        {% include '@cob/menus/news.html.twig'     %}
                    </li>
					<li class="nav-item dropdown align-self-end">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Government</a>
                        {% include '@cob/menus/meetings.html.twig' %}
                    </li>
                </ul>
            </div>
        </div>
        <form class="d-flex "id="search-block-form" method="get" action="{{ base_path }}search">
            <input id="query" name="query" type="search" class="form-control me-2" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>
</header>
