{% if contactInfo %}
<div class="contactInfo">
    {% if contactInfo.address %}
    <dl><dt>Address</dt>
        <dd><address>
            {%- if contactInfo.location_nid %}<a href="{{ path('entity.node.canonical', {'node':contactInfo.location_nid}) }}">{% endif -%}
            {{ contactInfo.address }}
            {{ contactInfo.city }} {{ contactInfo.state }} {{ contactInfo.zip }}
            {%- if contactInfo.location_nid %}</a>{% endif -%}
            </address>
        </dd>
    </dl>
    {% endif %}
    {% if contactInfo.phone %}
    <dl><dt>Phone</dt>
        <dd><a href="tel:{{ contactInfo.phone }}" class="phone" title="Phone">
                {{ contactInfo.phone }}
            </a>
        </dd>
    </dl>
    {% endif %}
    {% if contactInfo.fax %}
    <dl><dt>Fax</dt>
        <dd><a href="tel:{{ contactInfo.fax }}" class="fax" title="Fax">
                {{ contactInfo.fax }}
            </a>
        </dd>
    </dl>
    {% endif %}
    {% if contactInfo.email %}
    <dl><dt>Email</dt>
        <dd><a href="mailto:{{ contactInfo.email }}">{{ contactInfo.email }}</a></dd>
    </dl>
    {% endif %}
    {% if contactInfo.links.facebook %}
    <dl><dt>Facebook</dt>
        <dd><a href="{{ contactInfo.links.facebook }}" class="facebook">Connect on Facebook</a></dd>
    </dl>
    {% endif %}
    {% if contactInfo.links.twitter  %}
    <dl><dt>Twitter</dt>
        <dd><a href="{{ contactInfo.links.twitter }}" class="twitter">Follow us on Twitter</a></dd>
    </dl>
    {% endif %}
</div>
{% endif %}
