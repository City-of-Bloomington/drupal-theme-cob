<ul class="usa-card-group">
    {% for event in events %}
    <li class="usa-card">
        <a class="usa-card__container" href="{{ event.htmlLink }}">
            <article>
                <header class="usa-card__header">
                    <h2 class="usa-card__heading">
                        {{ event.start.dateTime | date('M j') }}<br />
                        {{ event.summary  }}
                    </h2>
                </header>
                <div class="usa-card__body">
                    <p>
                    {% if event.start.dateTime %}
                        <time datetime="{{ event.start.dateTime }}">
                            <span class="weekday">
                                {{ event.start.dateTime | date('l')}}
                            </span>

                            <span class="time">
                                -
                                {{  event.start.dateTime | date('g:ia') }}
                                {% if event.end.dateTime %}
                                    -
                                    {{ event.end.dateTime | date('g:ia') }}
                                {% endif %}
                            </span>
                        </time>
                    {% else %}
                        <time datetime="{{ event.start.date }}">
                            <span class="weekday">
                                {{ event.start.date | date('l')}}
                            </span>
                        </time>
                    {% endif %}
                    </p>
                    {% if 'zoom' in event.location %}
                    <p>via Zoom</p>
                    {% elseif null == event.location %}
                    <p>Location TBA</p>
                    {% else %}
                    <p>{{ event.location }}</p>
                    {% endif %}
                </div>
            </article>
        </a>
    </li>
    {% endfor %}
</ul>
<div>
    <a href="https://calendar.google.com/calendar/embed?src={{ calendarId }}&ctz=America/New_York" class="usa-button">Visit Full Calendar</a>
</div>
